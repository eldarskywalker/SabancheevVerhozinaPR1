<Window x:Class="PracticeWork1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PracticeWork1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Height="428" VerticalAlignment="Top">
        <Image x:Name="ImageFormula" Margin="39,17,0,0" Source="/Image1.png" Stretch="None" IsEnabled="False" HorizontalAlignment="Left" VerticalAlignment="Top" Width="536"/>
        <Label Content="x" HorizontalAlignment="Left" Margin="95,228,0,0" VerticalAlignment="Top"/>
        <Label Content="y" HorizontalAlignment="Left" Margin="95,259,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="valueX" HorizontalAlignment="Left" Margin="141,232,0,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" Width="82"/>
        <TextBox x:Name="valueY" HorizontalAlignment="Left" Margin="141,263,0,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" Width="82"/>
        <RadioButton x:Name="RadioShx" Content="sh(x)" HorizontalAlignment="Left" Margin="93,301,0,0" VerticalAlignment="Top"/>
        <RadioButton x:Name="RadioEx" Content="e^x" HorizontalAlignment="Left" Margin="93,343,0,0" VerticalAlignment="Top"/>
        <RadioButton x:Name="Radiox2" Content="x^2" HorizontalAlignment="Left" Margin="93,321,0,0" VerticalAlignment="Top"/>
        <Button x:Name="Calculate" Content="Вычислить" HorizontalAlignment="Left" Margin="191,301,0,0" VerticalAlignment="Top" Height="27" Width="64" Click="Calculate_Click"/>
        <Button x:Name="Clear" Content="Очистить" HorizontalAlignment="Left" Margin="191,337,0,0" VerticalAlignment="Top" Height="27" Width="64" Click="Clear_Click"/>
        <Label Content="Ответ" HorizontalAlignment="Left" Margin="93,373,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="Answer" HorizontalAlignment="Left" Margin="150,377,0,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" Width="81" RenderTransformOrigin="0.793,10.582" IsEnabled="False"/>

    </Grid>
</Window>
